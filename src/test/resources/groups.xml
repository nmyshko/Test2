<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Main Suite">
    <test name="GroupsOfCalculatorsTests">
        <groups>
            <define name="GroupOfInt">
                <include name="divInt"/>
            </define>
            <define name="GroupOfDouble">
                <include name="divDouble"></include>
            </define>
            <define name="GroupOfBoth">
                <include name="divInt"/>
                <include name="divDouble"/>
            </define>
            <run>
                <include name="GroupOfDouble"></include>
            </run>
        </groups>
        <classes>
            <class name="tests.CalculatorDivisionTest"></class>
        </classes>
    </test>
</suite>